<?xml version="1.0" ?>
<sdf version="1.7">
  <world name="default">
    <!-- Enable physics -->
    <physics name="default_physics" type="gz-physics">
      <max_step_size>0.001</max_step_size>
      <real_time_factor>1.0</real_time_factor>
      <real_time_update_rate>1000</real_time_update_rate>
    </physics>

    <!-- Add ROS 2 clock publishing plugin -->
    <plugin name="gz_ros2_clock" filename="gz-ros2-clock-system"/>
  </world>
</sdf>
